					<div class="info text-center">
						</br>
						</br>
						<h2>{{.Message}}</h2>
						<h3>{{.Guess}}</h3>
						<p>{{.Result}}</p>
						<div>
						<div class="col-lg-4">
							
						</div>
						<div >
